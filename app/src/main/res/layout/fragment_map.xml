<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp">

            <EditText
                android:id="@+id/edit_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:inputType="text"
                android:lines="1" />

            <ImageButton
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_close_24"
                android:text="reset" />

            <ImageButton
                android:id="@+id/button_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_search_24"
                android:text="search" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_suggests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        <TextView
            android:id="@+id/text_search_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="10dp">

        <ImageButton
            android:id="@+id/button_zoom_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dialog_background"
            android:elevation="1dp"
            android:scaleType="center"
            android:src="@drawable/round_add_24" />

        <ImageButton
            android:id="@+id/button_zoom_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/dialog_background"
            android:elevation="1dp"
            android:scaleType="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/round_horizontal_rule_24" />

        <ImageButton
            android:id="@+id/button_places"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/dialog_background"
            android:elevation="1dp"
            android:scaleType="center"
            android:src="@drawable/round_format_list_bulleted_24" />
    </LinearLayout>

</FrameLayout>